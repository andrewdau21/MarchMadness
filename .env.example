# Database connection (never store real secrets in the repo)
# Replace the placeholders in your local environment or CI/Azure App Settings
host=localhost
port=5432
dbname=marchmadness
user=your_db_user
password=your_db_password

# Controls which UI menu items are shown on startup
# Possible values:
#  entry_phase  - show only the Entry Form (use during signup window)
#  post_entry   - show Leaderboard and Full Standings (use after signup)
UI_PHASE=entry_phase

# Also available: the default tab to open (entry, leaderboard, scoreboard, chat)
DEFAULT_VIEW=leaderboard
